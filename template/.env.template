# Default values for Docker Compose
DOCKER_COMPOSE_VERSION=3.1

# PostgreSQL database configuration for CCIMP application
POSTGRES_DB=codebible
POSTGRES_USER=codebible
POSTGRES_PASSWORD=codebible
DB_PORT=5432
DB_NAME=codebible
DB_PASSWORD=codebible
DB_USER=codebible

# Resource limits for CCIMP service
CPUS=2.0
MEMORY=2G

# DHIS2 WAR file URL
DHIS_WAR_URL=https://releases.dhis2.org/41/dhis2-stable-41.0.1.war

# Timezone setting (UTC by default)
TZ=Africa/Dar_es_Salaam

# DHIS2 home directory and Tomcat installation directory
DHIS_HOME=/home/dhis/config

# JDK Java options (empty by default)
JDK_JAVA_OPTIONS=""

# Organization and project names
ORGANIZATION_NAME=icodebible
DHIS_PROJECT_NAME=cainam

# PostgreSQL version
POSTGRES_VERSION=13

# Ports for PostgreSQL and DHIS2
POSTGRES_HOST_PORT=8184
DHIS_HOST_PORT=8183

# DHIS2 version
DHIS_VERSION=41

